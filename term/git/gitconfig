[user]
  name = Francesco La Camera
  email = fm@lacamera.org
  signingkey = ~/.ssh/Macbook.pub

[commit]
  gpgsign = true

[gpg]
  format = ssh

[gpg "ssh"]
  allowedSignersFile = ~/.ssh/allowed_signers

[core]
  autocrlf = input
  eol = lf

[color]
  ui = always

[alias]
  find = !git ls-files | grep
  c = !git commit
  cm = !git commit -m
  ll = !git log --oneline
  s = !git status --short
