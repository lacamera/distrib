#!/bin/sh
. "$HOME/.config/profile"

xset b off # Disable the bell

# speed up the autorepeat rate:
# delay before autorepeat starts repeat rate (in ms).
xset r rate 300 40

if [ 0 ]; then
	xset s off
	xset -dpms
	xset s noblank 
	
	xrandr --dpi 82
	xrandr --output eDP1 --off
	xrandr --output DP2 --primary \
		--mode 2560x1080 \
		--rate 75 
	# xrandr --output XY --rate YZ doesn't apply the refresh rate.
	# This works for now.
	xrandr -r 75 
	xrdb -merge "$HOME/.config/x11/xresources"
fi

xrandr --output eDP1 --mode 2256x1504 
xrandr -r 60
xrandr --dpi 200
xrdb -merge "$HOME/.config/x11/xresources-hidpi"
xsetroot -solid "#1d2021"
exec dwm
