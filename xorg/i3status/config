general {
    output_format = "i3bar"
    colors = true
    interval = 2
}

order += "wireless _first_"
order += "ethernet _first_"
order += "load"
order += "cpu_temperature cpu0"
order += "battery all"
order += "volume master"
order += "tztime local"
 
cpu_temperature cpu0 {
    format = "%degreesÂ°C"
    path = "cpu0"
}

wireless _first_ {
    format_up = "wifi"
    format_down = "wifi"
}

ethernet _first_ {
    format_up = "wired"
    format_down = "wired"
}

battery all {
    format = "%percentage"
}

volume master {
	format = "vol %volume"
}

load {
    format = "%1min"
}

tztime local {
    format = "%H:%M %d/%m"
}
