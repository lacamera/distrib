[user]
  name = Francesco La Camera
  email = fm@lacamera.org
  signingkey = ~/.ssh/id_ed25519.pub

[commit]
  gpgsign = true

[gpg]
  format = ssh

[gpg "ssh"]
  allowedSignersFile = ~/.ssh/allowed_signers

[core]
  autocrlf = input
  eol = lf

[color]
  ui = always

[alias]
  find = !git ls-files | grep
  logln = !git log --oneline
  short = !git status --short
  a = !git add
  c = !git commit
  cm = !git commit -m
  f = !git find
  l = !git log
  ll = !git logln
  m = !git push
  s = !git short
  p = !git pull
